{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "課題情報を追加",
        "weight": "bold",
        "color": "#1DB446",
        "size": "sm"
      },
      {
        "type": "text",
        "text": "${subject}",
        "weight": "bold",
        "size": "xl",
        "margin": "md"
      },
      {
        "type": "text",
        "text": "${class}"
      },
      {
        "type": "separator",
        "margin": "md"
      },
      {
        "type": "box",
        "layout": "vertical",
        "margin": "xxl",
        "spacing": "sm",
        "contents": [
          {
            "type": "box",
            "layout": "horizontal",
            "contents": [
              {
                "type": "text",
                "text": "提出期限",
                "size": "sm",
                "color": "#555555",
                "flex": 0
              },
              {
                "type": "text",
                "text": "${month}月${day}日(${weekday}) ${hour}時${minute}分",
                "size": "sm",
                "color": "#111111",
                "align": "end"
              }
            ]
          }
        ]
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "button",
            "action": {
              "type": "message",
              "label": "提出期限を変更",
              "text": "[提出期限を変更]"
            },
            "style": "primary",
            "margin": "md"
          },
          {
            "type": "button",
            "action": {
              "type": "message",
              "label": "教科を変更",
              "text": "[教科を変更]"
            },
            "style": "primary",
            "margin": "md"
          }
        ],
        "margin": "lg"
      }
    ]
  },
  "styles": {
    "footer": {
      "separator": true
    }
  }
}
